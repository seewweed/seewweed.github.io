<!DOCTYPE html>
<html lang="ja">
<%- include('../includes/head.ejs') %>

    <body>
        <!-- header -->
        <div class="sub-cover cover-default">
<%- include('../includes/header.ejs') %>
            <h2 class="page-title font-english">Blog</h2>
        </div>

        <!-- contents -->
        <main class="wrapper index-contents">
        <div id="article" class="post"></div>

        <script>
            const params = new URLSearchParams(window.location.search);
            const file = params.get("file");

            if(file){
                fetch(file)
                    .then(res => {
                    if (!res.ok) throw new Error("ファイルが見つかりません");
                    return res.text();
                    })
                    .then(html => {
                    document.getElementById("article").innerHTML = html;
                    })
                    .catch(err => {
                    document.getElementById("article").innerHTML = "<p>記事の読み込みに失敗しました。</p>";
                    console.error(err);
                    });
            }else{
                document.getElementById("article").innerHTML = "<p>記事が見つかりません。</p>";
            }
        </script>

        <aside class="sidebar">
            <h3 class="heading-medium font-english">Category</h3>
            <ul class="side-menu">
            <li><a href="#">書くこと</a></li>
            <li><a href="#">期間限定メニュー</a></li>
            <li><a href="#">イベント</a></li>
            <li><a href="#">お客様との会話</a></li>
            </ul>
            <h3 class="heading-medium font-english">Archives</h3>
            <ul class="side-menu">
            <li><a href="#">2025</a></li>
            </ul>
        </aside>

        <aside class="ad">
            <img src="/images/banner.jpg" alt="new menu release">
        </aside>
        </main>

        <!-- footer -->
        <footer class="page-footer">
<%- include('../includes/copyright.ejs') %>
        </footer>
    </body>
</html>
